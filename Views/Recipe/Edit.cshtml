@model DietBook.MVC.Models.RecipeEdit

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />

<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container">
        <div class="row">
            <div class="col-12 col-xl-4">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label h5"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Author" class="control-label h5"></label>
                    <input asp-for="Author" readonly class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="CreatedDate" class="control-label h5"></label>
                    <input asp-for="CreatedDate" readonly class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Photo" class="control-label h5"></label>
                    <input asp-for="Photo" readonly class="form-control" hidden />
                    <div>
                        <img class="img-fluid" src="@Model.Photo" alt="..." style="height: 100px">
                    </div>
                    <p><small>Uploading new photo will delete previous one.</small></p>
                    <input asp-for="NewPhoto" class="form-control" />
                    <span asp-validation-for="NewPhoto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Steps" class="control-label h5"></label>
                    <p><small>Place steps here in a single paragraf. If steps need to be presented as a list, separate paragrafs by single empty line.</small></p>
                    <textarea asp-for="Steps[0]" class="form-control" rows="7">
                        </textarea>
                    <span asp-validation-for="Steps[0]" class="text-danger"></span>
                </div>

            </div>
            <div class="col-12 col-xl-8">
                <label class="control-label h5">Ingredients</label>
                <p></p>
                <div id="table-wrapper">
                    <div id="ingredients"> </div>
                </div>
            </div>
            <p></p>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" usesubmitbehavior="false">Save</button>
                <a href="/Recipe" class="btn btn-primary">Back to List</a>
            </div>
        </div>
    </div>
</form>

<script src="~/js/RecipeEdit.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
