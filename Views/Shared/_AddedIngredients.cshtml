@model IEnumerable<Ingredient>

<div class="container">
    @foreach (var ingredient in Model)
    {
        <div class="row">
            <div class="col-6">
                <div>@Html.DisplayFor(modelIngredient => ingredient.Name)</div>
            </div>
            <div class="col-4">
                <div>@Html.DisplayFor(modelIngredient => ingredient.Quantity)  @Html.DisplayFor(modelIngredient => ingredient.Unit.Name)</div>
            </div>
            <div class="col-2">
                <button type="button" class="btn btn-primary btn-sm btn-Del bi bi-trash" data-delete="@ingredient.Id"></button>
            </div>
        </div>
        <p><small></small></p>
    }
</div>

    <script src="~/js/AddedIngredients.js"></script>