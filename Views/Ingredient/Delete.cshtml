
@model DietBook.MVC.Models.Ingredient

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="card border-primary border-2" style="background-color:#cef4ba">
    <div class="row" style="color: #639954">
        <div class="col-4">
            <div class="card-body">
                <h4>@Model.Name</h4>
            </div>
        </div>
        <div class="col-8">
            <div class="card-body">
                <h5 class="card-title">Used in:</h5>
                <p class="card-text">
                    @if (Model.IngredientRecipes.Count != 0)
                    {
                        foreach (var recipe in Model.IngredientRecipes)
                        {
                            <a href="/Recipe/Details/@recipe.Id">@recipe.Name</a>
                        }
                    }
                    else
                    {
                    <p>none</p>
                    }
            </div>
        </div>
    </div>
</div>
<p>
</p>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="/Ingredient" class="btn btn-primary">Back to List</a>
    </form>